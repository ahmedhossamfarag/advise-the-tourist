@model AdviseTheTourist.Models.Invitation

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1>Details</h1>

    <div>
        <h4>Invitation</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MemberEmail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MemberEmail)
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Member2Email)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Member2Email)
            <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PlaceName)
            </dt>
            <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PlaceName)
            </dd>
            <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Accepted)
            </dt>
            <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Accepted)
            </dd>
        </dl>
    </div>
    @if (Model.Member2Email == User.Claims.FirstOrDefault(c => c.Type == "Email")?.Value)
    {
        <div class="d-flex align-items-center">
            <form asp-action="Accept">
                <input type="hidden" asp-for="MemberEmail" />
                <input type="hidden" asp-for="Member2Email" />
                <input type="hidden" asp-for="PlaceName" />
                <input type="submit" value="Accept" class="btn btn-primary" />
            </form> |
            <form asp-action="Edit">
                <input type="hidden" asp-for="MemberEmail" />
                <input type="hidden" asp-for="Member2Email" />
                <input type="hidden" asp-for="PlaceName" />
                <input type="submit" value="Reject" class="btn btn-danger" />
            </form> |
            <a asp-action="Index">Back to List</a>
        </div>
    }
    else
    {
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    }
</div>